<h1>Users#edit</h1>
<form action="/users/<%= @user.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>name</p>
    <input type="text" name="name" value="<%= @user.name %>">
    <hr>
    <p>about</p>
    <textarea name='about'>
        <%= @user.about %>
    </textarea>
    <hr>
    <input type='submit' value='Create'>
</form>

